              <tbody>
                {% for line in order.line_items %}
                  <tr>
                    <td class="content_cell content_b py bb tc">
                      <!--[if (mso)|(IE)]>
                        <table role="presentation" width="624" border="0" cellspacing="0" cellpadding="0" align="center" style="vertical-align:top;width:624px;Margin:0 auto;"><tbody><tr><td width="156" style="line-height:0px;font-size:0px;mso-line-height-rule:exactly;">
