  <body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0">
    <table role="presentation" class="email_table" width="100%" border="0" cellspacing="0" cellpadding="0">
      <tbody>
        <tr>
          <td class="email_body email_start email_end tc">
            <!--[if (mso)|(IE)]>
              <table role="presentation" width="640" border="0" cellspacing="0" cellpadding="0" align="center" style="vertical-align:top;width:640px;Margin:0 auto;"><tbody><tr><td style="line-height:0px;font-size:0px;mso-line-height-rule:exactly;">
