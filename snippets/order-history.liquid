                        <table
                          role="presentation"
                          class="column"
                          width="100%"
                          border="0"
                          cellspacing="0"
                          cellpadding="0"
                        >
                          <tbody>
                            <tr>
                              <td class="column_cell tl switch_tc">
                                {% if line.product.title %}
                                   {% assign line_title = line.product.title %}
                                {% else %}
                                   {% assign line_title = line.title %}
                                {%- endif %}


                                {% if line.quantity < line.quantity %}

                                  {% capture line_display %} {{ line.quantity }} of {{ line.quantity }} {% endcapture %}

                                {% else %}
                                   {% assign line_display = line.quantity %}
                                {%- endif %}
                                <h3>
                                  <a href="{{shop.url}}{{ line.product.url }}">{{ line_title }}</a>
                                  <span class="tm">× {{ line_display }}</span>
                                </h3>
                                {% if line.variant.title != 'Default Title' %}
                                  <p class="mb_0">{{ line.variant.title }}</p>


                                {%- endif %}
                                {% unless line.product.vendor == empty %}
                                  <p class="mb">SKU: {{ line.sku }}</p>

                                  {% assign myString = line.sku %}
                                  {% assign lastCharacter = myString | slice: -1 %}
                                  {% if lastCharacter == 'B' %}
                                    {% assign google_url1 = 'https://docs.google.com/forms/d/e/1FAIpQLSfi1uuy-o4-8KDgtysNPbFrPtfUbrnyhBPEliOhPGh43kdjOQ/viewform?usp=pp_url&entry.1567984788=' %}
                                    {% assign google_url2 = '&entry.1071009604=' %}
                                    {% assign google_url3 = '&entry.1156020151=' %}
                                    {% assign google_url4 = '&entry.1516467128' %}
                                    <table
                                      role="presentation"
                                      class="ebtn tc"
                                      align="center"
                                      border="0"
                                      cellspacing="0"
                                      cellpadding="0"
