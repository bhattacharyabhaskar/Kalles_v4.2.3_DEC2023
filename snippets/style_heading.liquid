{%- liquid  
    assign page_type = request.page_type   
    if page_type == 'collection' and collection.image != blank and section.settings.use_specify_image 
        assign image = collection.image 
    elsif article.image != blank and section.settings.use_specify_image 
        assign image = article.image 
    else         
        assign image = section.settings.image  
    endif    
-%}  
style="--space-padding-dk:{{ se_stts.padding }}px;--space-padding-mb:{{ se_stts.paddingmb }}px;--space-mg-dk:{{ se_stts.mg_b }}px;--space-mg-mb:{{ se_stts.mg_bmb }}px;--bg-cl:{{ se_stts.color }};--op:{{ se_stts.overlay | divided_by: 100.0 }};--bg_repeat:{{ se_stts.bg_repeat }};--bg_size:{{ se_stts.bg_size }};--bg_pos:{{ se_stts.bg_pos | replace: '_', ' ' }};{% if image != blank %}background-image:url({{ image | img_url: 'master' }});{% endif %}"