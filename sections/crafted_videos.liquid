      "step": 1,
      "default": 14
    },
    {
      "type": "checkbox",
      "id": "show_mute_toggle",
      "label": "Show Mute Toggle Button Inside Each Video",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video Block",
      "settings": [
        {
          "type": "text",
          "id": "video_title",
          "label": "Video Title",
          "default": "Crafting Banarasi Silk"
        },
        {
          "type": "textarea",
          "id": "video_caption",
          "label": "Caption",
          "default": "An inside look at our artisan‚Äôs weaving process."
        },
        {
          "type": "text",
          "id": "video_tags",
          "label": "Tags (comma-separated)",
          "default": "Banarasi, Handwoven"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL (.mp4 or .webm)"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Thumbnail (used if autoplay is off)"
        },
        {
          "type": "checkbox",
          "id": "autoplay",
          "label": "Autoplay video",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Crafted Video Gallery",
      "category": "Custom"
    }
  ]
}
{% endschema %}
