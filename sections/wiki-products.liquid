<div class="t4s-container wiki-section">
  <div class="wiki-header">
    <h1 class="wiki-title">{{ page.title }}</h1>
  </div>

  <div class="wiki-page-content">
    {{ page.content }}
  </div>

  {% assign coll_handle = page.metafields.custom.collection_handle %}
  {% assign products_count = collections[coll_handle].products_count | plus: 0 %}
  {% if collections[coll_handle] and products_count > 0 %}
    <div class="wiki-collection">
      <h2>Shop {{ collections[coll_handle].title }} Sarees</h2>
      <div class="t4s-row">
{% assign col = 't4s-col-lg-3 t4s-col-md-4 t4s-col-12' %}
        {% for product in collections[coll_handle].products %}
          <div class="{{ col }}">
            <div class="wiki-grid">

            {% render 'product-grid-item1', product: product, col: 't4s-col-lg-3 t4s-col-md-4 t4s-col-6' %}

            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>
<style>

  .wiki-product-img {
  width: 100%;
  aspect-ratio: 3/4;
  object-fit: cover;
  border-radius: 6px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  margin-bottom: 10px;
}

  @media (max-width: 768px) {
  .wiki-grid {
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 16px;
  }
  .wiki-product-img {
    aspect-ratio: 1/1;
  }
}
</style>
