{% for product in collections.all.products %}
  <h2>Checking: {{ product.title }}</h2>
  
  {% if product.available and product.total_inventory > 0 %}
    <p>‚úÖ Product is available (Inventory: {{ product.total_inventory }})</p>
    
    {% if product.media != blank %}
      <p>üé• Media Found:</p>
      <ul>
        {% for media in product.media %}
          <li>Type: {{ media.media_type }} - Source: {% if media.sources != blank %} ‚úÖ Exists {% else %} ‚ùå Missing {% endif %}</li>
        {% endfor %}
      </ul>
    {% else %}
      <p>‚ùå No media found for this product.</p>
    {% endif %}
  
  {% else %}
    <p>‚ùå Product is out of stock.</p>
  {% endif %}
{% endfor %}
